{
  "name": "jeffreyemanuel-site",
  "version": "0.2.0",
  "private": true,
  "packageManager": "bun@1.3.3",
  "engines": {
    "npm": "DO NOT USE NPM - Use bun instead",
    "bun": ">=1.3.0"
  },
  "scripts": {
    "preinstall": "node -e \"if (process.env.npm_execpath.indexOf('npm') !== -1) { console.error('\\n\\n‚ùå ERROR: This project uses BUN, not npm!\\n\\nPlease use: bun install\\n\\n'); process.exit(1); }\"",
    "dev": "next dev",
    "build": "rm -rf .next && next build",
    "build:with-stats": "bun run update-stats && rm -rf .next && next build",
    "update-stats": "bun run scripts/update-stats.ts",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.2",
    "clsx": "^2.1.1",
    "feed": "^5.1.0",
    "framer-motion": "^12.23.26",
    "fuse.js": "^7.1.0",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "gsap": "^3.14.2",
    "highlight.js": "^11.11.1",
    "katex": "^0.16.27",
    "lucide-react": "^0.561.0",
    "next": "16.0.10",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^3.4.0",
    "three": "^0.182.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/katex": "^0.16.7",
    "@types/minimatch": "^6.0.0",
    "@types/node": "25.0.2",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/three": "0.182.0",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "9.39.2",
    "eslint-config-next": "16.0.10",
    "jsdom": "^27.3.0",
    "playwright": "^1.57.0",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "vitest": "^4.0.16"
  },
  "trustedDependencies": [
    "unrs-resolver"
  ]
}
